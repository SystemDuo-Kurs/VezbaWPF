<Window x:Class="Vezba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vezba"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"  FontSize="34">
	<StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<TextBox Text="{Binding Path=Broj1}" MinWidth="200"/>
			<Label Content="+"/>
			<TextBox Text="{Binding Path=Broj2}" MinWidth="200"/>
		</StackPanel>
		<Button Click="Klik">OK</Button>
		<DataGrid ColumnWidth="*" Name="tabela" IsReadOnly="True"/>
	</StackPanel>
</Window>
